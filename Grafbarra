import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
get ipython().run_line_magic ('matplotlib', 'inline')
from matplotlib import style

MG = (17.891, 21.000)
RJ = (14.391, 17.336)
SP = (36.969, 46.289)

xpos = no.arange (len(SP))
xpos

style.use('ggplot')
plt.figure(figsize=(10,8))
barWidth = 0.2
plt.bar(xpos,MG,color='royalblue'
